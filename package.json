{
	"name": "nest-pingbot",
	"version": "1.2.1",
	"description": "A NestJS messaging module for Slack and Discord notifications, built with a focus on simplicity and ease of use.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tejastn10/nest-pingbot.git"
	},
	"scripts": {
		"build": "nest build",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage --collectCoverageFrom='src/**/*.{ts,tsx}'",
		"prepublishOnly": "npm run build",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,json}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "npm@11.6.0",
	"dependencies": {
		"@slack/web-api": "^7.10.0",
		"@slack/webhook": "^7.0.6",
		"discord.js": "^14.22.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@nestjs/cli": "^11.0.10",
		"@nestjs/common": "^11.1.6",
		"@nestjs/core": "^11.1.6",
		"@nestjs/schedule": "^6.0.0",
		"@nestjs/schematics": "^11.0.7",
		"@nestjs/testing": "^11.1.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.3.3",
		"husky": "^9.1.7",
		"jest": "^30.1.3",
		"lint-staged": "^16.1.6",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"ts-jest": "^29.4.1",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"@nestjs/common": "^10.0.0 || ^11.0.0",
		"@nestjs/core": "^10.0.0 || ^11.0.0",
		"reflect-metadata": "^0.1.13 || ^0.2.0",
		"rxjs": "^7.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"forceExit": true
	},
	"keywords": [
		"nestjs",
		"slack",
		"discord",
		"notification",
		"messaging",
		"ping",
		"bot"
	],
	"files": [
		"dist",
		"README.md",
		"LICENSE.md"
	],
	"license": "MIT"
}
